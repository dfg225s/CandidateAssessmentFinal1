@model IEnumerable<Student>

<h1>Students</h1>


    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addStudentModal">
    Add Student
</button>

<partial name="_StudentTable" model="@Model" />

<!-- Modal -->
<div class="modal fade" id="addStudentModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Student</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/Records/SaveStudent" method="post">
                <div class="modal-body">

                    <div class="row">
                        <div class="col-6">
                            <label class="form-label">First Name</label>
                            <input type="text" name="FirstName" class="form-control" />
                        </div>
                        <div class="col-6">
                            <label class="form-label">Last Name</label>
                            <input type="text" name="LastName" class="form-control" />
                        </div>
                        <div class="col-6">
                            <label class="form-label">Email</label>
                            <input type="text" name="Email" class="form-control" />
                        </div>
                        <div class="col-6">
                            <label class="form-label">Age</label>
                            <select name="Age" asp-items="@ViewBag.AgeList" class="form-control"></select>
                        </div>
                        <div class="col-6">
                            <label class="form-label">School</label>
                            <select name="SchoolId" asp-items="@ViewBag.SchoolList" class="form-control"></select>
                        </div>
                        <div class="col-6">
                            <label class="form-label">Student Organizations</label>
                            <select name="SelectedOrgs" asp-items="@ViewBag.OrgList" multiple class="form-control"></select>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>