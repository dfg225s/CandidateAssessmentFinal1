@model IEnumerable<School>

    <h1>Schools</h1>

    <table class="table table-hover table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>State</th>
                <th>Students</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var school in Model)
        {
            <tr>
                <td>@school.Name</td>
                <td>@school.City</td>
                <td>@school.State</td>
                <td><a class="nav-link" id="SelectedId" asp-controller="Records" asp-action="SchoolStudents" asp-route-schoolId="@school.SchoolId" style="color: blue; text-decoration: underline;">@school.Students.Count</a></td>
            </tr>
        }
        </tbody>
    </table>
